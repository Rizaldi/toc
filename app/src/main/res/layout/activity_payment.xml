    <TextView
        android:id="@+id/labelDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/input_margin"
        android:layout_marginLeft="@dimen/fab_margin"
        android:layout_marginRight="@dimen/fab_margin"
        android:textSize="@dimen/textsize1"
        android:textStyle="italic"
        android:textColor="@android:color/black"
        android:alpha="0.7"
        android:text="@string/label_click_attach"
        android:layout_below="@+id/layoutNominal"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/input_margin"
        android:layout_marginLeft="@dimen/input_margin"
        android:layout_marginRight="@dimen/input_margin"
        android:layout_below="@+id/labelDesc">
        <ImageView
            android:id="@+id/imagePayment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/fab_margin"
            android:background="@drawable/text_bg"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/attachCamera"
                android:layout_width="@dimen/logo_height"
                android:layout_height="@dimen/logo_height"
                android:src="@drawable/ic_photo_camera_black_24dp"
                android:tint="@color/dark_gray"
                android:padding="@dimen/input_margin"/>
            <ImageView
                android:id="@+id/attachGallery"
                android:layout_width="@dimen/logo_height"
                android:layout_height="@dimen/logo_height"
                android:src="@drawable/ic_photo_black_24dp"
                android:tint="@color/dark_gray"
                android:padding="@dimen/input_margin" />
        </LinearLayout>
    </RelativeLayout>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/btnUpload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/fab_margin"
        android:src="@drawable/ic_send_black_24dp"
        android:tint="@android:color/white"/>
</RelativeLayout>
