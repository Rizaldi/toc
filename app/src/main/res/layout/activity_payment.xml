<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBarPayment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|enterAlways"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />
    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
        android:id="@+id/layoutPayment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/input_margin"
        android:padding="@dimen/input_margin"
        android:layout_below="@+id/appBarPayment"
        android:background="@drawable/rectangleline">

        <RelativeLayout
            android:id="@+id/layoutInvoice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/viewCostDesc"
                android:layout_width="@dimen/desc_width"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textsize2"
                    android:textColor="@android:color/black"
                    android:alpha="0.7"
                    android:text="@string/label_price_cost"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textsize2"
                    android:textColor="@android:color/black"
                    android:alpha="0.7"
                    android:text="@string/label_cashback"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textsize2"
                    android:textColor="@android:color/black"
                    android:alpha="0.7"
                    android:text="@string/label_payment"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_toRightOf="@+id/viewCostDesc">
                <TextView
                    android:id="@+id/viewCost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textsize2"
                    android:textColor="@color/colorPrimary"
                    android:text="@string/label_price_cost"/>
                <TextView
                    android:id="@+id/viewCashback"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textsize2"
                    android:textColor="@color/colorPrimary"
                    android:text="@string/label_cashback"/>
                <TextView
                    android:id="@+id/viewPayment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textsize2"
                    android:textColor="@color/colorPrimary"
                    android:text="@string/label_payment"/>
            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/labelPayment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layoutInvoice"
            android:textSize="@dimen/textsize2"
            android:textColor="@android:color/black"
            android:alpha="0.7"
            android:text="@string/label_payment_booking" />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/bank_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/labelPayment"/>
        <TextView
            android:id="@+id/labelPaymentDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textsize2"
            android:textColor="@android:color/black"
            android:alpha="0.7"
            android:text="@string/label_payment_desc"
            android:layout_below="@+id/bank_recycler"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layoutBank"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layoutPayment"
        android:layout_marginLeft="@dimen/fab_margin"
        android:layout_marginStart="@dimen/fab_margin"
        android:layout_marginRight="@dimen/fab_margin"
        android:layout_marginEnd="@dimen/fab_margin"
        android:paddingBottom="2dp"
        android:background="@drawable/underline">
        <TextView
            android:id="@+id/viewBank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textsize2"
            android:textColor="@color/colorPrimary"
            android:text="@string/label_bank_name"/>
        <com.gts.toc.view.spinner.NiceSpinner
            android:id="@+id/bank_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/viewBank"
            android:textSize="@dimen/textsize2"
            android:textColor="@android:color/black"
            android:alpha="0.8"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layoutNominal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layoutBank"
        android:layout_marginTop="@dimen/input_padding"
        android:layout_marginLeft="@dimen/fab_margin"
        android:layout_marginStart="@dimen/fab_margin"
        android:layout_marginRight="@dimen/fab_margin"
        android:layout_marginEnd="@dimen/fab_margin">
        <TextView
            android:id="@+id/viewNominal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textsize2"
            android:textColor="@color/colorPrimary"
            android:text="@string/label_nominal"/>
        <EditText
            android:id="@+id/input_nominal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/input_padding"
            android:layout_below="@+id/viewNominal"
            android:textColor="@android:color/black"
            android:alpha="0.8"
            android:textSize="@dimen/textsize2"
            android:singleLine="true"
            android:background="@drawable/underline"/>
    </RelativeLayout>
