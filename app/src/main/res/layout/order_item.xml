<RelativeLayout
    android:id="@+id/order_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/input_margin"
    android:paddingLeft="@dimen/input_margin"
    android:paddingRight="@dimen/input_margin"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:id="@+id/order_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/input_padding"
        android:background="@drawable/rectangleline">
        <RelativeLayout
            android:id="@+id/order_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:paddingLeft="@dimen/input_margin"
            android:paddingRight="@dimen/input_margin"
            android:paddingTop="@dimen/input_padding"
            android:paddingBottom="@dimen/input_padding"
            android:background="@color/colorUnderLine">

            <TextView
                android:id="@+id/order_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:textColor="@android:color/black"
                android:alpha="0.8"
                android:textSize="@dimen/textsize3"
                android:text="@string/app_name"/>
            <!--<TextView-->
                <!--android:id="@+id/order_date"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_below="@+id/order_id"-->
                <!--android:textColor="@android:color/black"-->
                <!--android:alpha="0.6"-->
                <!--android:textSize="@dimen/textsize2"-->
                <!--android:text="@string/app_name"-->
                <!--android:textStyle="italic"/>-->

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true">

                <!--<ImageView-->
                    <!--android:id="@+id/btn_cancel"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:padding="@dimen/input_padding"-->
                    <!--android:src="@drawable/ic_cancel_black_24dp"-->
                    <!--android:tint="@color/colorInfo"-->
                    <!--android:layout_alignParentRight="true"-->
                    <!--android:layout_alignParentEnd="true"/>-->
                <ImageView
                    android:id="@+id/btn_map"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/input_padding"
                    android:src="@drawable/ic_map_black_24dp"
                    android:tint="@color/colorInfogreen"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:visibility="invisible"/>
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/layout_service"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/order_header"
            android:layout_marginTop="@dimen/input_padding"
            android:layout_marginLeft="@dimen/input_margin"
            android:layout_marginStart="@dimen/input_margin"
            android:layout_marginRight="@dimen/input_margin"
            android:layout_marginEnd="@dimen/input_margin"
            android:paddingBottom="@dimen/input_padding">

            <!--<TextView-->
                <!--android:id="@+id/order_title"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:textColor="@android:color/black"-->
                <!--android:alpha="0.8"-->
                <!--android:textSize="@dimen/textsize4"-->
                <!--android:text="@string/app_name" />-->
            <TextView
                android:id="@+id/order_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:alpha="0.6"
                android:textSize="@dimen/textsize1"
                android:text="@string/app_name"/>
            <TextView
                android:id="@+id/order_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/order_date"
                android:textColor="@android:color/black"
                android:alpha="0.7"
                android:textSize="@dimen/textsize3"
                android:text="@string/app_name"/>
            <TextView
                android:id="@+id/label_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/order_desc"
                android:alpha="0.8"
                android:textSize="@dimen/textsize2"
                android:text="@string/app_name"/>
            <!--<TextView-->
                    <!--android:id="@+id/btn_cancel"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_alignParentRight="true"-->
                    <!--android:layout_alignParentEnd="true"-->
                    <!--android:layout_below="@+id/order_desc"-->
                    <!--android:paddingTop="@dimen/input_margin"-->
                    <!--android:textColor="@color/colorButton"-->
                    <!--android:textSize="@dimen/textsize3"-->
                    <!--android:text="@string/btn_cancel"/>-->
        </RelativeLayout>
        <TextView
            android:id="@+id/label_click"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/input_padding"
            android:layout_below="@+id/layout_service"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/input_margin"
            android:layout_marginEnd="@dimen/input_margin"
            android:alpha="0.8"
            android:textSize="@dimen/textsize2"
            android:textColor="@color/colorAccent"
            android:text="@string/label_click" />
    </RelativeLayout>
</RelativeLayout>